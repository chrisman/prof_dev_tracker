<%= form_for employee do |f| %>
  <%= f.label :username, 'Username' %></br>
  <%= f.text_field :username %></br>

  <%= f.label :password, 'Password' %></br>
  <%= f.password_field :password %></br>

  <%= f.label :name, 'Your Real Name' %></br>
  <%= f.text_field :name %></br>

  <%= f.label :email, 'Email' %></br>
  <%= f.text_field :email %></br>

  <%= f.label :location, 'Location' %></br>
  <%= f.collection_select :location_id, Location.all, :id, :name, :prompt => 'Where do you work?'%></br>

  <%= f.label :manager, 'Manager' %></br>
  <%= f.collection_select :manager_id, Manager.all, :id, :name, :prompt => "Who's your boss?"%></br>

  <%= f.submit %>
<% end %>
